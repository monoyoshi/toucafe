                {
                    "base": "bake for ~35-40 minutes",
                    "notes": []
                },
                {
                    "base": "let bread cool in pan for ~10 minutes",
                    "notes": []
                },
                {
                    "base": "transfer bread to wire rack to cool for ~1 hour",
                    "notes": []
                }
