            "header": "starter",
            "list": [
                {
                    "base": "mix 1/3 cup flour, 1/2 cup whole milk, and 1/2 cup water into a pot",
                    "notes": []
                },
                {
                    "base": "heat up mixture on a stove over low heat for ~5 minutes or until it becomes slightly thick but still pourable",
                    "notes": []
                },
                {
                    "base": "pour starter into bowl and let it sit until cooled to room temperature",
                    "notes": []
                }
            ]
        },
        {
            "header": "dough",
            "list": [
                {
                    "base": "add 2 1/2 cup flour, 1/4 cup sugar, ~2 teaspoon active dry yeast, and 1 teaspoon salt into the stand mixer with a dough hook attachment",
                    "notes": []
                },
                {
                    "base": "add 1 egg, 1/2 cup whole milk, and 1/2 starter and let the stand mixer run on low speed (~2) for ~5 minutes",
                    "notes": []
                },
                {
                    "base": "add in 4 tablespoon softened butter and let the stand mixer run on low speed (~2) for ~11 minutes or until the dough is smooth and sticky",
                    "notes": []
                },
                {
                    "base": "butter a bowl",
                    "notes": []
                },
                {
                    "base": "transfer dough to buttered bowl, cover it, and let it sit for ~60 minutes or until it has risen to roughly double its size",
                    "notes": []
                },
                {
                    "base": "butter another bowl",
                    "notes": []
                },
                {
                    "base": "punch, split in half, and separate dough into the two bowls, cover them, and let them sit for ~15 minutes",
                    "notes": []
                },
                {
                    "base": "preheat the oven to 350¬∞f",
