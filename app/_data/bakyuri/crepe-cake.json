    "instructions": [
        {
            "header": "cr√™pe",
            "list": [
                {
                    "base": "put 3/4 cup warm water, 1 1/2 cup milk, 6 eggs, 6 tablespoon melted butter, 1 1/2 cup all purpose flour, 3 tablespoon granulated sugar, and 1/8 teaspoon salt into a blender and blend until well-combined",
                    "notes": []
                },
                {
                    "base": "heat a 9-inch non-stick pan over medium heat",
                    "notes": []
                },
                {
                    "base": "lightly coat pan with butter",
                    "notes": []
                },
                {
                    "base": "for each cr√™pe:",
                    "notes": [
                        "add enough batter to lightly coat the pan and spread evenly",
                        "cook for ~30 seconds on each side"
                    ]
                },
                {
                    "base": "set aside to cool to room temperature",
                    "notes": []
                }
            ]
        },
        {
            "header": "frosting",
            "list": [
                {
                    "base": "beat 1 cup softened butter and 1 1/2 cup sweetened condensed milk using the stand mixer with a wire whip attachment until it looks whipped and light in color",
                    "notes": []
                },
                {
                    "base": "beat in 1 cup softened cream cheese in ~1 tablespoon increments for ~3 minutes or until it is no longer lumpy",
                    "notes": []
                },
                {
                    "base": "beat in 2 teaspoon vanilla extract until well incorporated and smooth",
                    "notes": []
                }
            ]
        },
        {
            "header": "assembling",
            "list": [
                {
                    "base": "spread ~1 1/2 tablespoon frosting on the base of a serving plate",
                    "notes": []
                },
                {
                    "base": "place first cr√™pe on top",
                    "notes": []
                },
                {
                    "base": "for each cr√™pe or until the desired height is reached:",
                    "notes": [
                        "spread ~3 tablespoon of frosting on top of the previous cr√™pe",
                        "place cr√™pe on top"
                    ]
                },
                {
                    "base": "spread ~1 1/2 tablespoon frosting on top of the topmost cr√™pe",
                    "notes": []
                },
                {
                    "base": "refrigerate cake for ~6 hours or until frosting has solidified",
                    "notes": []
                },
                {
                    "base": "decorate with blueberries, raspberries, and powdered sugar",
                    "notes": []
                }
            ]
        }
